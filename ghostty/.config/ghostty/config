# Syntax
# vim: set filetype=toml :

# Colorscheme
theme = catppuccin-mocha
background = 1e1e2e

# Fonts
font-family = "Fira Code"

# Keybinds
keybind = ctrl+shift+)=new_split:right
keybind = ctrl+shift+(=new_split:down

# Replace default catppuccin 
# pink color with mauve
palette = 5=CBA6F7
palette = 13=CBA6F7

# Window Decorations
window-decoration = false
window-theme = ghostty
adw-toolbar-style = raised
gtk-wide-tabs = true

# Cursor
shell-integration-features = no-cursor
cursor-style = bar

# Uncomment to enable CRT Shader
# custom-shader = bettercrt.glsl

# Other
gtk-single-instance = true
shell-integration = zsh
